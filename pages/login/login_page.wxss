/* components/login_page/login_page.wxss */
Page {
  height: 100%;
}

.login_container {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.login_border {
  width: 60%;
  height: 30%;
}

.login_welcome {
  margin: 36px 0px;
  font-weight: bold;
}

.login_user {
  width: 100%;
  height: 15px;
  margin-bottom: 18px;
  border-bottom: 1px solid rgb(235, 235, 235);
}

.login_pass {
  width: 100%;
  height: 15px;
  margin-bottom: 18px;
  border-bottom: 1px solid rgb(235, 235, 235);
}

.login_btn {
  width: 15px;
  background-color: rgb(221, 221, 221);
  border-radius: 10px;
}