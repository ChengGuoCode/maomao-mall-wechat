/* components/goods_img_text/goods_img_text.wxss */
@import '../../style/fontawesome.wxss';
@import '../../style/stylesheet.wxss';
.img_text_container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.img_text_item {
  width: 45%;
  background-color: white;
  border-radius: 15px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 15px;
}
.img_text_img {
  width: 100%;
  border-radius: 15px;
}
.img_text_title {
  margin: 5px 0px;
  font-size: 12px;
}
.img_text_footer {
  width: 100%;
  height: 15px;
  display: flex;
  align-items: center;
  background-color: rgb(238, 238, 238);
}
.img_text_portrait {
  flex-grow: 1;
  text-align: right;
  width: 20px;
  height: 20px;
  border-radius: 100px;
  overflow: hidden;
}
.img_text_portrait image {
  width: 100%;
  height: 100%;
}
.img_text_username {
  flex-grow: 5;
  text-align: left;
  font-size: 10px;
}
.img_text_like {
  flex-grow: 1;
  text-align: right;
}
.img_text_like_num {
  flex-grow: 3;
  text-align: left;
}