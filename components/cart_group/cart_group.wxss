/* components/cart_group/cart_group.wxss */
@import '../../style/fontawesome.wxss';
@import '../../style/stylesheet.wxss';
.clearfix::after {
  content: "";
  clear: both;
  display: table;
}
.float_left {
  float: left;
}
.float_right {
  float: right;
}
.fill_full {
  width: 100%;
  height: 100%;
}
.cart_group_store {
  margin: 10px 5px 5px 5px;
}
.icon_cart_store_choose {
  margin: 2px 5px 0px 5px;
}
.icon_cart_store {
  margin: 2px 5px 0px 10px;
}
.cart_store_name {
  margin-top: 2px;
  font-size: 12px;
  font-weight: bold;
}
.label_cart_store_coupon {
  margin: 0px;
  font-size: 11px;
  border-radius: 12px;
  background-color: rgb(252, 242, 243);
  color: red;
  padding: 3px;
}
.cart_promotion_tag {
  background-color: red;
  color: white;
  font-size: 8px;
  margin: 10px 5px 10px 30px;
  padding: 2px;
  display: inline-block;
}
.cart_promotion_desc {
  display: inline-block;
  font-size: 10px;
  margin: 10px 0px 10px 5px;
}
.cart_promotion_add {
  display: inline-block;
  font-size: 10px;
  margin: 10px 0px;
}
.cart_goods {
  height: 100px;
  width: 100%;
  display: flex;
  flex-flow: nowrap;
}
.icon_cart_goods_choose {
  margin: 0px 5px;
  padding: 35px 0px;
}
.cart_goods_img {
  width: 80px;
  height: 80px;
  margin: 2px 8px 10px 10px;
}
.cart_goods_detail {
  height: 80px;
  width: 60%;
}
.cart_goods_desc {
  font-size: 11px;
}
.cart_goods_sku {
  font-size: 10px;
  color: gray;
  width: fit-content;
  background-color: rgb(206, 206, 206);
  margin: 5px 0px 8px 0px;
}
.cart_goods_bottom {
  display: flex;
  justify-content: space-between;
}
.cart_goods_sku_price {
  color: red;
  font-weight: bold;
}
.cart_promotion_separator {
  height: 1px;
  width: 60%;
  background-color: lightgray;
  margin: auto;
  margin-bottom: 8px;
}
.cart_goods_stepper {
  display: flex;
  justify-content: center;
}
.cart_goods_num_minus {
  width: 18px;
  background-color: rgb(240, 240, 240);
  margin-right: 8px;
  text-align: center;
}
.cart_goods_num {
  width: 36px;
  background-color: rgb(240, 240, 240);
  text-align: center;
  font-size: 12px;
}
.cart_goods_num_plus {
  width: 18px;
  background-color: rgb(240, 240, 240);
  margin-left: 8px;
  text-align: center;
}
