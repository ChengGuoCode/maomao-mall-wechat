/* components/goods_card/goods_card.wxss */
.goods_card_img {
  width: 100%;
  height: 160px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.goods_card_text {
  margin-top: 0px;
  font-size: 11px;
  padding: 5px;
}
.goods_card_desc {
  white-space: nowrap; 
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 3px;
}
.label_goods_card_0 {
  font-size: 8px;
  color: red;
  border: red solid 1px;
  border-radius: 16px;
  width: fit-content;
  margin: 3px;
  padding: 3px;
}
.goods_card_salePrice {
  float: left;
  color: red;
  font-size: 15px;
  font-weight: bold;
}
.goods_card_price {
  float: left;
  color: gray;
  text-decoration: line-through;
  font-size: 12px;
  margin: 2px 0px 0px 2px;
}
.goods_card_cart {
  float: right;
  color: red;
  font-size: 15px;
  font-weight: bold;
}